<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:hint="@string/zero"
            android:textColor="@color/button_background"
            android:textColorHint="@color/button_background"
            android:textSize="56sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@id/input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:hint="@string/zero"
            android:textColor="@android:color/darker_gray"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonAC"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="@string/clear"
                android:textSize="24sp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="8dp"
                android:onClick="Click_clear"
                style="?android:borderlessButtonStyle"/>

            <Button
                android:id="@+id/buttonSwitchSign"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="@string/switchSign"
                android:textSize="24sp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="8dp"
                style="?android:borderlessButtonStyle"/>

            <Button
                android:id="@+id/buttonPercent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="@string/percent"
                android:textSize="24sp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="8dp"
                style="?android:borderlessButtonStyle" />

            <Button
                android:id="@+id/buttonDiv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="@string/divide"
                android:textSize="24sp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="8dp"
                android:onClick="onClickOperator"
                android:tag="@string/divide"
                style="?android:borderlessButtonStyle" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="@string/seven"
                android:textSize="24sp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="8dp"
                android:onClick="onClickNum"
                android:tag="7"
                style="?android:borderlessButtonStyle"/>

            <Button
                android:id="@+id/button_8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="@string/eight"
                android:textSize="24sp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="8dp"
                android:onClick="onClickNum"
                android:tag="8"
                style="?android:borderlessButtonStyle"/>

            <Button
                android:id="@+id/button_9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="@string/nine"
                android:textSize="24sp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="8dp"
                android:onClick="onClickNum"
                android:tag="9"
                style="?android:borderlessButtonStyle"/>

            <Button
                android:id="@+id/buttonMul"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="@string/multi"
                android:textSize="24sp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="8dp"
                android:onClick="onClickOperator"
                android:tag="@string/multi"
                style="?android:borderlessButtonStyle"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hapticFeedbackEnabled="false">

            <Button
                android:id="@+id/button_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="@string/four"
                android:textSize="24sp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="8dp"
                android:onClick="onClickNum"
                android:tag="4"
                style="?android:borderlessButtonStyle"/>

            <Button
                android:id="@+id/button_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="@string/five"
                android:textSize="24sp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="8dp"
                android:onClick="onClickNum"
                android:tag="5"
                style="?android:borderlessButtonStyle"/>

            <Button
                android:id="@+id/button_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="@string/six"
                android:textSize="24sp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="8dp"
                android:onClick="onClickNum"
                android:tag="6"
                style="?android:borderlessButtonStyle"/>

            <Button
                android:id="@+id/buttonMin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="@string/minus"
                android:textSize="24sp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="8dp"
                android:onClick="onClickOperator"
                android:tag="@string/minus"
                style="?android:borderlessButtonStyle" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hapticFeedbackEnabled="false">

            <Button
                android:id="@+id/button_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="@string/one"
                android:textSize="24sp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="8dp"
                android:onClick="onClickNum"
                android:tag="1"
                style="?android:borderlessButtonStyle"/>

            <Button
                android:id="@+id/button_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="@string/two"
                android:textSize="24sp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="8dp"
                android:onClick="onClickNum"
                android:tag="2"
                style="?android:borderlessButtonStyle"/>

            <Button
                android:id="@+id/button_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="@string/three"
                android:textSize="24sp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="8dp"
                android:onClick="onClickNum"
                android:tag="3"
                style="?android:borderlessButtonStyle"/>

            <Button
                android:id="@+id/buttonAdd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="@string/plus"
                android:textSize="24sp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="8dp"
                android:onClick="onClickOperator"
                android:tag="@string/plus"
                style="?android:borderlessButtonStyle"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hapticFeedbackEnabled="false">

            <Button
                android:id="@+id/buttonBackspace"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="@string/backspace"
                android:textSize="24sp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="8dp"
                style="?android:borderlessButtonStyle"/>

            <Button
                android:id="@+id/button_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="@string/zero"
                android:textSize="24sp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="8dp"
                android:onClick="onClickNum"
                android:tag="0"
                style="?android:borderlessButtonStyle"/>

            <Button
                android:id="@+id/buttonDot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="@string/dot"
                android:textSize="24sp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="8dp"
                android:onClick="onClickNum"
                android:tag="@string/dot"
                style="?android:borderlessButtonStyle"/>

            <Button
                android:id="@+id/buttonResult"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="@string/equal"
                android:textSize="24sp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="8dp"
                android:onClick="Click_Result"
                style="?android:borderlessButtonStyle"/>
        </TableRow>
    </TableLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="297dp" />
</androidx.constraintlayout.widget.ConstraintLayout>